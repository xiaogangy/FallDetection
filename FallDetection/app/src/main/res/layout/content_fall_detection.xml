<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ibrahim.falldetection.FallDetection"
    tools:showIn="@layout/activity_fall_detection">

    <Button
        android:id="@+id/btnConfiguration"
        android:layout_width="297dp"
        android:layout_height="86dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shapecircle"
        android:text="Configuration"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="297dp"
        android:layout_height="86dp"
        android:layout_marginTop="154dp"
        android:background="@drawable/shapecircle"
        android:checked="false"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textOff="Start Monitor"
        android:textOn="Close Monitor"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
